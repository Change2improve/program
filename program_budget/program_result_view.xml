<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE openerp SYSTEM "openerp.dtd">
<openerp>
  <data>

    <record id="view_program_result_form" model="ir.ui.view">
      <field name="model">program.result</field>
      <field name="inherit_id" ref="program.view_program_result_form" />
      <field name="arch" type="xml">

        <notebook>
          <page name="budget" string="Budget">

            <group name="total">
              <b><label for="budget_total"/></b>
              <field name="budget_total" nolabel="1"/>
            </group>

            <group name="foreign budgets">
              <b><label for="foreign_budget_lines"/></b>
              <field name="foreign_budget_total" nolabel="1"/>
              <field name="foreign_budget_lines" nolabel="1" colspan="2">
                <tree>
                  <field name="partner_id"/>
                  <field name="amount" sum="Amount"/>
                </tree>
              </field>
            </group>

            <group name="company_budget" col="2">
              <b><field name="account_company_id" nolabel="1"/></b>
              <field name="crossovered_budgets_modified_total" nolabel="1"/>
              <field name="crossovered_budgets" nolabel="1" colspan="2">
                <tree>
                  <field name="crossovered_budget_id"/>
                  <field name="planned_amount" sum="Planned"/>
                </tree>
              </field>
            </group>

          </page>
        </notebook>

        <field name="target_audience" position="before">
          <field name="target_country" />
          <field name="target_region" />
        </field>

      </field>
    </record>

  </data>
</openerp>
