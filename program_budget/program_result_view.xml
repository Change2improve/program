<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE openerp SYSTEM "openerp.dtd">
<openerp>
  <data>

    <record id="view_program_result_form" model="ir.ui.view">
      <field name="model">program.result</field>
      <field name="inherit_id" ref="program.view_program_result_form" />
      <field name="arch" type="xml">

        <notebook>
          <page name="budget" string="Budget">

            <field name="currency_id" invisible="1"/>

            <group name="sale_total" class="oe_subtotal_footer oe_left">
              <div class="oe_horizontal_separator oe_clear oe_left" colspan="2">Summary</div>
              <b><label for="crossovered_budgets_modified_total"/></b>
              <field name="crossovered_budgets_modified_total"
                     nolabel="1" widget="monetary"
                     options="{'currency_field': 'currency_id'}"/>

              <b><label for="foreign_budget_total"/></b>
              <field name="foreign_budget_total"
                     nolabel="1"
                     widget="monetary"
                     options="{'currency_field': 'currency_id'}"/>
              <label for="budget_total" class="oe_subtotal_footer_separator"/>
              <field name="budget_total"
                     nolabel="1"
                     class="oe_subtotal_footer_separator"
                     widget='monetary'
                     options="{'currency_field': 'currency_id'}"/>
            </group>

            <group name="foreign budgets">
              <div class="oe_horizontal_separator oe_clear "><field name="company_id" nolabel="1"/></div>
              <field name="crossovered_budget_ids" nolabel="1" colspan="2">
                <tree>
                  <field name="crossovered_budget_id"/>
                  <field name="planned_amount"
                         sum="Planned"/>
                </tree>
              </field>
            </group>

            <group string="Partners" col="2">
              <field name="foreign_budget_lines"
                     nolabel="1"
                     colspan="2"
                     context="{'default_result_id': id}">
                <tree editable="bottom">
                  <field name="result_id" invisible="1"/>
                  <field name="partner_id" domain="[('is_company', '=', True)]"/>
                  <field name="budget_id"/>
                  <field name="currency_amount"
                         groups="base.group_multi_currency"
                         attrs="{'required': True}"
                         on_change="onchange_currency_amount(currency_amount, currency_id)"/>
                  <field name="currency_id"
                         groups="base.group_multi_currency"
                         attrs="{'required': True}"
                         on_change="onchange_currency_amount(currency_amount, currency_id)"/>
                  <!-- In company's currency -->
                  <field name="amount"
                         sum="Total in Account Currency"/>
                </tree>
              </field>
            </group>

          </page>
        </notebook>

        <field name="target_audience" position="before">
          <field name="target_country" />
          <field name="target_region" />
        </field>

      </field>
    </record>

    <record id="view_program_result_form_mc" model="ir.ui.view">
      <field name="model">program.result</field>
      <field name="inherit_id" ref="view_program_result_form" />
      <field name="groups_id" eval="[(6, 0, [ref('base.group_multi_currency')])]"/>
      <field name="arch" type="xml">

        <field name="amount" position="attributes">
          <attribute name="readonly">1</attribute>
        </field>

      </field>
    </record>

  </data>
</openerp>
